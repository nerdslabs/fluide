<header>
  <div class="container full">
    <div class="row">
      <div class="sm-4 lg-6 cell">
        <div class="menu-mobile"><div></div></div>
        <a class="logo" href="<%- url_for('/') %>">
          <%- image_tag('images/logo.svg', {class: "logo-image"}) %>
          <span>fluide</span>
        </a>
      </div>
      <div class="sm-8 lg-6 cell text-right">
        <nav>
          <% for (var i in theme.menu){ %>
            <a class="main-nav-link" href="<%- url_for(theme.menu[i]) %>"><%= i %></a>
          <% } %>
          <a href="https://github.com/nerdslabs/fluide" class="stars" target="_blank"><img src="https://img.shields.io/github/stars/nerdslabs/fluide.svg?style=social&label=Stars"></a>
          <div class="search-algolia"><input type="text" placeholder="Search..."></div>
        </nav>
      </div>
    </div>
  </div>
</header>