{
  "name": "fluide",
  "version": "1.0.0-alpha.1",
  "description": "Simple and fluid CSS and JS framework",
  "scripts": {
    "js:compile": "rollup -c build/config.js --environment TARGET:web",
    "js:watch": "rollup -w -c build/config.js --environment TARGET:web",
    "js:watch2": "nodemon --watch js --exec \"yarn run js:compile\"",
    "js:dist": "npm-run-all --parallel js:compile --sequential js:minify js:types",
    "js:minify": "uglifyjs --compress typeofs=false --mangle --comments \"/^!/\" --source-map \"content=dist/fluide.js.map,includeSources,url=fluide.min.js.map\" --output dist/fluide.min.js dist/fluide.js",
    "js:types": "rm ./dist/fluide.d.ts && tsc --rootDir \"./js\" --module \"AMD\" --outFile \"./dist/fluide.d.ts\" -d --emitDeclarationOnly",
    "css:compile": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 scss/fluide.scss dist/fluide.css",
    "css:watch": "node-sass -w --output-style expanded --source-map true --source-map-contents true --precision 6 scss/fluide.scss dist/fluide.css",
    "css:dist": "npm-run-all --parallel css:compile --sequential css:autoprefixer css:minify",
    "css:autoprefixer": "postcss dist/fluide.css --use autoprefixer -d dist",
    "css:minify": "cleancss --level 1 --source-map --source-map-inline-sources --output dist/fluide.min.css dist/fluide.css",
    "borwsersync:run": "browser-sync start --files 'dist' 'example' --startPath 'example' --server './'",
    "all:watch": "npm-run-all --parallel js:watch css:watch",
    "all:watch:borwsersync": "npm-run-all --parallel borwsersync:run all:watch",
    "all:dist": "npm-run-all --parallel css:dist js:dist",
    "test": "mocha -r ts-node/register"
  },
  "main": "dist/fluide.js",
  "types": "dist/fluide.d.ts",
  "style": "dist/fluide.css",
  "sass": "scss/fluide.scss",
  "author": "Krystian Drożdżyński",
  "license": "Apache-2.0",
  "devDependencies": {
    "autoprefixer": "^8.4.1",
    "browser-sync": "^2.24.4",
    "chai": "^4.1.2",
    "chokidar": "^2.0.3",
    "clean-css-cli": "^4.1.11",
    "mocha": "^5.1.1",
    "node-sass": "^4.9.0",
    "nodemon": "^1.17.4",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^5.0.0",
    "rollup": "^0.58.2",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript": "^0.8.1",
    "sass-true": "^4.0.0",
    "ts-node": "^6.0.3",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3",
    "uglify-js": "^3.3.24"
  }
}
