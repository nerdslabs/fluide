{
  "name": "fluide",
  "version": "1.0.0-alpha.1",
  "description": "Simple and fluid CSS and JS framework",
  "scripts": {
    "js:compile": "rollup -c build/config.js --environment TARGET:web",
    "js:watch": "rollup -w -c build/config.js --environment TARGET:web",
    "js:dist": "echo \"TODO\"",
    "js:minify": "uglifyjs --compress typeofs=false --mangle --comments \"/^!/\" --source-map \"content=dist/fluide.js.map,includeSources,url=fluide.min.js.map\" --output dist/fluide.min.js dist/fluide.js",
    "css:compile": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 src/scss/fluide.scss dist/fluide.css",
    "css:watch": "node-sass -w --output-style expanded --source-map true --source-map-contents true --precision 6 src/scss/fluide.scss dist/fluide.css",
    "css:dist": "npm-run-all --parallel css:compile --sequential css:autoprefixer css:minify",
    "css:autoprefixer": "postcss dist/fluide.css --use autoprefixer -d dist",
    "css:minify": "cleancss --level 1 --source-map --source-map-inline-sources --output dist/fluide.min.css dist/fluide.css",
    "borwsersync:run": "browser-sync start --files 'dist' 'test' --startPath 'test' --server './'",
    "all:watch": "npm-run-all --parallel js:watch css:watch",
    "all:watch:borwsersync": "npm-run-all --parallel borwsersync:run js:watch css:watch"
  },
  "main": "dist/fluide.js",
  "style": "dist/fluide.css",
  "sass": "src/scss/fluide.scss",
  "author": "Krystian Drożdżyński",
  "license": "Apache-2.0",
  "devDependencies": {
    "autoprefixer": "^7.2.3",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.1.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2015-rollup": "^3.0.0",
    "browser-sync": "^2.21.0",
    "chokidar": "^1.7.0",
    "clean-css-cli": "^4.1.10",
    "eslint": "^4.14.0",
    "node-sass": "^4.7.2",
    "nodemon": "^1.14.3",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^4.1.1",
    "rollup": "^0.53.0",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-replace": "^2.0.0",
    "uglify-js": "^3.3.2"
  }
}
